<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dialog_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp30"
            android:layout_marginTop="@dimen/dp30"
            android:gravity="center"
            android:textColor="@color/color_797979"
            android:textSize="@dimen/sp13" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp20">

                <Button
                    android:id="@+id/dialog_message_commit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp40"
                    android:layout_weight="1"
                    android:background="@drawable/shape_height40_10_grey"
                    android:textColor="@color/color_949494"
                    android:textSize="@dimen/sp13"
                    android:layout_marginRight="@dimen/dp20"/>


                <Button
                    android:id="@+id/dialog_message_cancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp40"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_height40_10_yellow"
                    android:textSize="@dimen/sp17" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>